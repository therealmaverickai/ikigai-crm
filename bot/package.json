{
  "name": "ikigai-crm-bot",
  "version": "1.0.0",
  "description": "Telegram bot with OpenAI integration for Ikigai CRM",
  "type": "module",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
