{
  "name": "ikigai-crm-bot",
  "version": "1.0.0",
  "description": "Telegram bot with OpenAI integration for Ikigai CRM",
  "type": "module",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
    "dev": "tsx src/bot.ts",
    "build": "cd .. && npm run build && cd bot && tsc",
    "build:bot": "tsc",
    "watch": "tsx --watch src/bot.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/node-telegram-bot-api": "^0.64.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
